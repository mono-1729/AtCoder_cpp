{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++ compile file",
        "command": "/usr/bin/g++",
        "args": [
          "-std=gnu++17",
          "-Wall",
          "-Wextra",
          "-Wshadow",
          "-Wconversion",
          "-fsanitize=undefined,address",
          "-ggdb",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-I",
          "${workspaceFolder}/ac-library/"
        ],
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}